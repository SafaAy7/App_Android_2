<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.pfa_app.ProfileEnqActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="161dp"
        android:layout_height="166dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom :"
        android:textSize="22dp"
        android:textColor="#2A559B"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />
-
    <TextView
        android:id="@+id/textViewNomProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        android:layout_alignLeft="@+id/textViewPrenomProfile"
        android:layout_alignStart="@+id/textViewPrenomProfile" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prenom :" android:textStyle="bold"
        android:textColor="#2A559B"
        android:textSize="22dp"

        app:layout_constraintTop_toBottomOf="@+id/textViewNomProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.021"
        android:layout_alignBaseline="@+id/textViewPrenomProfile"
        android:layout_alignBottom="@+id/textViewPrenomProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewPrenomProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="85dp"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="110dp"
        app:layout_constraintHorizontal_bias="0.021" />

    <Button
        android:id="@+id/enq"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gerer Orphelin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="432dp"
        app:layout_constraintHorizontal_bias="0.892"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/even"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/even"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gerer Evenments"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="355dp"
        app:layout_constraintHorizontal_bias="0.613"
        android:layout_marginBottom="87dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
