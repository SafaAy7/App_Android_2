<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.pfa_app.GalerieAddActivity">

<TextView
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:text="Ajouter un Ã  galerie"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    android:id="@+id/textView31" />
    <EditText
        android:id="@+id/editTextGalerieTitre"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Titre :"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editTextGalerieContenu"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Contenu :"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextGalerieTitre"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editTextGalerieMinAge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:minEms="2"
        android:maxEms="100"
        android:hint="Min age"
        android:inputType="number"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.036" />

    <EditText
        android:id="@+id/editTextGalerieMaxAge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:minEms="2"
        android:maxEms="100"
        android:hint="Max age"
        android:inputType="number"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextGalerieContenu"
        app:layout_constraintLeft_toRightOf="@+id/textView35"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonEnregistrerGalerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextGalerieMaxAge"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.031" />

    <Button
        android:id="@+id/buttonSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:text="selectioner un image"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintLeft_toRightOf="@+id/buttonEnregistrerGalerie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGalerieMaxAge" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="et"
        app:layout_constraintLeft_toRightOf="@+id/editTextGalerieMinAge"
        app:layout_constraintTop_toBottomOf="@+id/editTextGalerieContenu" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age entre :"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextGalerieContenu"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.026" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_manage"
        tools:layout_editor_absoluteX="66dp"
        android:visibility="gone"
        tools:layout_editor_absoluteY="363dp" />

</android.support.constraint.ConstraintLayout>
