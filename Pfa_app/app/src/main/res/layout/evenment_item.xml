                    android:shadowColor="#00ff00"
                    android:shadowDx="-1"
                    android:shadowDy="1"
                    android:layout_marginRight="4dp"
                    android:shadowRadius="1"
                    android:text="Show More"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
