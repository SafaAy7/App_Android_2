                    android:layout_height="wrap_content"
                    android:background="@drawable/button2"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:text="Editer" />

